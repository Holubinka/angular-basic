{
  "name": "angular-blog",
  "version": "0.0.0",
  "scripts": {
    "start": "node dist/server",
    "heroku-prebuild": "npm install",
    "heroku-postbuild": "npm run build:i18n-ssr",
    "ng": "ng",
    "build": "ng build",
    "lint": "ng lint i18n-demo",
    "build:client-and-server-bundles-i18n": "ng run angular-basics:build:production-uk && ng run angular-basics:build:production-en && ng run angular-basics:server:production",
    "build:client-and-server-bundles": "ng build --prod && ng run angular-basics:server:production",
    "build:ssr": "npm run build:client-and-server-bundles && npm run compile:server",
    "build:i18n-ssr": "npm run build:client-and-server-bundles-i18n && npm run compile:server",
    "compile:server": "tsc -p server.tsconfig.json",
    "serve:ssr": "node dist/server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/platform-server": "latest",
    "@angular/router": "~8.2.14",
    "@angular/service-worker": "~8.2.14",
    "@nguniversal/express-engine": "latest",
    "@nguniversal/module-map-ngfactory-loader": "latest",
    "core-js": "^2.6.11",
    "locale": "^0.1.0",
    "ngx-quill": "^6.3.1",
    "path": "^0.12.7",
    "express": "^4.15.2",
    "reflect-metadata": "^0.1.10",
    "quill": "^1.3.6",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.0",
    "@angular/cli": "^8.3.20",
    "@angular/compiler-cli": "^8.1.3",
    "@angular/language-service": "~8.2.14",
    "@types/express": "^4.17.2",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "enhanced-resolve": "^3.3.0",
    "http-server": "^0.10.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-loader": "^4.2.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
